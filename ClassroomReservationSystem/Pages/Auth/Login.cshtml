@page
@model ClassroomReservationSystem.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-start" style="min-height: 100vh; padding-top: 60px;">
    <div class="card p-4 rounded shadow-lg" style="background-color: rgba(255,255,255,0.9); max-width: 400px; width: 90%; color: black;">
        <h2 class="text-center mb-4 text-dark">Login</h2>

        <form method="post" novalidate>
            <div class="form-group mb-3">
                <label asp-for="Input.Email" class="form-label text-dark"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Input.Password" class="form-label text-dark"></label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
    </div>
</div>

@section Styles {
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            background-image: url('/images/blue.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            font-family: 'Segoe UI', sans-serif;
        }

        .form-label {
            font-weight: 600;
        }

        input.form-control::placeholder {
            color: #888;
            opacity: 1;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
