@page "{id:int}"
@model ClassroomReservationSystem.Pages.Admin.DeleteTermModel

@{
    ViewData["Title"] = "Delete Term";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-start" style="min-height: 100vh; padding-top: 60px;">
    <div class="card shadow-lg p-4" style="max-width: 600px; width: 90%; background-color: rgba(255,255,255,0.95); color: black;">
        <h2 class="mb-4 text-center text-danger">Delete Term</h2>

        <h5 class="text-center">Are you sure you want to delete this term?</h5>

        <p class="text-center">
            <strong>@Model.Term.Name</strong><br />
            <span class="text-muted">@Model.Term.StartDate.ToShortDateString() - @Model.Term.EndDate.ToShortDateString()</span>
        </p>

        <form method="post">
            <input type="hidden" asp-for="Term.TermId" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">üóëÔ∏è Delete</button>
                <a asp-page="Terms" class="btn btn-secondary">üîô Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            background-image: url('/images/purple.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            font-family: 'Segoe UI', sans-serif;
        }

        .btn {
            font-weight: 600;
            border-radius: 8px;
        }

        .card {
            border-radius: 12px;
        }
    </style>
}
