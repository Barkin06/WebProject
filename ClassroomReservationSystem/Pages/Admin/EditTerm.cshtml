@page "{id:int}"
@model ClassroomReservationSystem.Pages.Admin.EditTermModel

@{
    ViewData["Title"] = "Edit Term";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-start" style="min-height: 100vh; padding-top: 60px;">
    <div class="card shadow-lg p-4" style="max-width: 650px; width: 90%; background-color: rgba(255,255,255,0.95); color: black;">
        <h2 class="mb-4 text-center">Edit Term</h2>

        <form method="post">
            <input type="hidden" asp-for="Term.TermId" />

            <div class="form-group mb-3">
                <label asp-for="Term.Name" class="form-label fw-semibold"></label>
                <input asp-for="Term.Name" class="form-control" />
                <span asp-validation-for="Term.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Term.StartDate" class="form-label fw-semibold"></label>
                <input asp-for="Term.StartDate" type="date" class="form-control" />
                <span asp-validation-for="Term.StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Term.EndDate" class="form-label fw-semibold"></label>
                <input asp-for="Term.EndDate" type="date" class="form-control" />
                <span asp-validation-for="Term.EndDate" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Term.IsActive" class="form-check-input" id="isActiveCheck" />
                <label class="form-check-label fw-semibold" for="isActiveCheck">
                    Mark as Active
                </label>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">ðŸ’¾ Save Changes</button>
                <a asp-page="Terms" class="btn btn-secondary">ðŸ”™ Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            background-image: url('/images/purple.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            font-family: 'Segoe UI', sans-serif;
        }

        .form-label {
            font-weight: 600;
            color: #333;
        }

        .form-control {
            border-radius: 8px;
            font-size: 0.95rem;
        }

        .btn {
            font-weight: 600;
            border-radius: 8px;
        }

        .card {
            border-radius: 12px;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
