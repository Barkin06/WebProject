@page
@model ClassroomReservationSystem.Pages.Instructor.DashboardModel
@using Microsoft.AspNetCore.Authorization

@{
    ViewData["Title"] = "Instructor Dashboard";
    Layout = "_Layout";
}
<!--GPT, Create me a instructor panel page with the butons of new reservation, my schedule, view feedback 
with boostrap logos, hovers and different fonts also using cards. I will link the remaining pages -->

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="d-flex justify-content-center align-items-start" style="min-height: 100vh; padding-top: 60px;">
    <div class="card shadow-lg p-4" style="max-width: 1000px; width: 95%; background-color: rgba(255,255,255,0.95); border-radius: 12px;">
        <h2 class="mb-4 text-center fw-semibold text-dark">Welcome, @Model.FullName!</h2>
        <div class="container">
            <div class="row g-4 justify-content-center">

                <div class="col-md-4">
                    <a href="@Url.Page("/Instructor/NewReservation")" class="card text-decoration-none shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-plus-square-fill display-4 text-primary mb-3"></i>
                            <h5 class="card-title">New Reservation</h5>
                            <p class="card-text">Submit a new classroom reservation request.</p>
                            <span class="btn btn-outline-primary mt-2">Submit New Reservation</span>
                        </div>
                    </a>
                </div>

                <div class="col-md-4">
                    <a href="@Url.Page("/Instructor/InstructorSchedule")" class="card text-decoration-none shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-calendar-week-fill display-4 text-info mb-3"></i>
                            <h5 class="card-title">My Schedule</h5>
                            <p class="card-text">View your approved weekly classroom schedule.</p>
                            <span class="btn btn-outline-info mt-2">View Weekly Schedule</span>
                        </div>
                    </a>
                </div>

                <div class="col-md-4">
                    <a href="@Url.Page("/Instructor/FeedbackSummary")" class="card text-decoration-none shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-star-fill display-4 text-warning mb-3"></i>
                            <h5 class="card-title">Feedback</h5>
                            <p class="card-text">See your received feedback and ratings.</p>
                            <span class="btn btn-outline-warning mt-2">View Feedback</span>
                        </div>
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            background-image: url('/images/green.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            font-family: 'Segoe UI', sans-serif;
        }

        .card {
            border-radius: 12px;
        }

        .card-title {
            color: #222;
            font-weight: 600;
        }

        .card-text {
            color: #555;
        }

        .btn {
            font-weight: 600;
            border-radius: 8px;
        }

        a.card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.25);
        }
    </style>
}
