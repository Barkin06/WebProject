@page
@model ClassroomReservationSystem.Pages.Instructor.FeedbackSummaryModel
@{
    ViewData["Title"] = "My Feedback Summary";
    Layout = "_Layout";
}
<!--GPT, I sent you the cshtml code, can you add some logos in it and make some visual upgrades? -->
<div class="d-flex justify-content-center align-items-start" style="min-height: 100vh; padding-top: 60px;">
    <div class="card shadow-lg p-4" style="max-width: 700px; width: 95%; background-color: rgba(255,255,255,0.95); color: black;">
        <h2 class="text-center mb-4 fw-semibold">ðŸ“Š My Feedback Summary</h2>

        <p class="text-center"><strong>Overall Average Rating:</strong> @Model.GeneralAverage.ToString("F2") / 5</p>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Course Name</th>
                        <th>Average Rating</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model.CourseSummaries)
                    {
                        <tr>
                            <td>@course.CourseName</td>
                            <td>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Math.Round(course.AverageRating))
                                    {
                                        <span class="text-warning">â˜…</span>
                                    }
                                    else
                                    {
                                        <span class="text-secondary">â˜†</span>
                                    }
                                }
                                <span class="ms-2">(@course.AverageRating.ToString("F2") / 5)</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            background-image: url('/images/green.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            font-family: 'Segoe UI', sans-serif;
        }

        .card {
            border-radius: 12px;
        }

        table {
            font-size: 0.95rem;
        }

        .table th,
        .table td {
            vertical-align: middle;
        }
    </style>
}